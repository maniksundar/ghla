<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginEnd="@dimen/card_margin"
    >

    <TextView
        android:id="@+id/add_phone"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="@dimen/padding_avg"
        android:layout_marginStart="@dimen/padding_avg"
        android:layout_marginTop="16dp"
        android:padding="@dimen/padding_avg"
        android:text="Add phone number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone_val"
        android:layout_width="0dp"
        android:layout_height="@dimen/textView_height_avg"
        android:layout_marginEnd="@dimen/padding_avg"
        android:layout_marginStart="@dimen/padding_avg"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="123-456-7890"
        android:inputType="textPersonName"
        android:padding="@dimen/padding_avg"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_phone" />

    <Button
        android:id="@+id/phone_change_submit_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/textView_height_avg"
        android:layout_marginEnd="@dimen/padding_avg"
        android:layout_marginStart="@dimen/padding_avg"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_green"
        android:padding="@dimen/padding_avg"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_val" />


</android.support.constraint.ConstraintLayout>